{
  "name": "tolymer-guest-web",
  "version": "1.0.0",
  "description": "Nuxt.js project",
  "author": "Kazuhito Hokamura <k.hokamura@gmail.com>",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "fix": "prettier '**/*.{vue,js}' --write",
    "precommit": "npm run lint",
    "proto": "protoc -I ../tolymer-grpc-server/proto tolymer.proto --js_out=import_style=commonjs:lib --grpc-web_out=import_style=commonjs+dts,mode=grpcwebtext:lib"
  },
  "config": {
    "nuxt": {
      "port": "5200"
    }
  },
  "dependencies": {
    "big.js": "^5.2.2",
    "dayjs": "^1.8.28",
    "google-protobuf": "^3.6.1",
    "grpc-web": "^1.0.3",
    "normalize.css": "^8.0.1",
    "nuxt": "^2.3.4"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "eslint": "^5.12.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-vue": "^5.1.0",
    "prettier": "^1.15.3",
    "ts-loader": "^5.3.3",
    "typescript": "^3.2.2"
  }
}
